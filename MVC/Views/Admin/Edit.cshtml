@{
    ViewBag.Title = "Edit";
    var id = ViewBag.id;
}

<h2>Edit My Information <button class="btn btn-defaul" id="backToMenu" onclick="window.location.href = '/Admin?id=1'"> Back to Menu </button></h2>

<div class="modal-dialog">
    <div class="modal-content">
        <!-- Modal Body -->
        <div class="modal-body" id="divLogin">
            <form class="form-horizontal" method="post" action="">
                <div class="form-group">
                    <label class="col-sm-2 control-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" data-bind="value: $data.first" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" data-bind="value: $data.last" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-primary" data-bind="value: 'Update', click: $data.update" />
                </div>
                <div id="divMessage"></div> 
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var viewModel = new AdminViewModel();
        viewModel.Load(@id);
    });
</script>
