@{
    ViewBag.Title = "ManageStudentCourse";
    var id = ViewBag.id;
}

<h2>Manage Student Academic History <button class="btn btn-defaul" id="backToMenu" onclick="window.location.href = '/Admin?id=1'"> Back to Menu </button></h2>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>First</th>
                <th>Last</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: id"></td>
                <td data-bind="text: first"></td>
                <td data-bind="text: last"></td>
                <td data-bind="text: email"></td>
                <td><a data-bind="attr: {href: '/Admin/StudentTakenCourse?id='+id}">Manage Course</a></td>
            </tr>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var studentViewModelObj = new StudentViewModel();
        studentViewModelObj.GetAll();
    });
</script>