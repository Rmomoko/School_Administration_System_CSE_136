@{
    ViewBag.Title = "Index";
}
@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/css")
<h2>Login</h2>

<div class="modal-dialog">
    <div class="modal-content">
        <!-- Modal Body -->
        <div class="modal-body" id="divLogin">
            <form class="form-horizontal" method="post" action="/Login">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" name="email" class="form-control" value="admin@cs.ucsd.edu" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" name="password" class="form-control" value="password" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Login" id="idSubmitButton" />
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var loginViewModelObj = new LoginViewModel();
        loginViewModelObj.Initialize();
    });
</script>
