@{
    ViewBag.Title = "Edit";
    var id = ViewBag.id;
}

<h2>Edit Info <button class="btn btn-defaul" id="backToMenu" onclick="window.location.href = '/Student?id=@id'"> Back to Menu </button></h2>

<div class="modal-dialog">
    <div class="modal-content">
        <!-- Modal Body -->
        <div class="modal-body" id="divCape">
            <form class="form-horizontal" method="post" action="">
                <div class="form-group">
                    <label class="col-sm-2 control-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="first_name" class="form-control" data-bind="value: $data.first" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="last_name" class="form-control" data-bind="value: $data.last" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" name="email" class="form-control" data-bind="value: $data.email" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="text" name="password" class="form-control" data-bind="value: $data.password" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Shoe Size</label>
                    <div class="col-sm-10">
                        <input type="text" name="shoe_size" class="form-control" data-bind="value: $data.shoesize" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Weight</label>
                    <div class="col-sm-10">
                        <input type="text" name="weight" class="form-control" data-bind="value: $data.weight" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Level</label>
                    <div class="col-sm-10">
                        <input type="text" name="level" class="form-control" data-bind="value: $data.level" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Category</label>
                    <div class="col-sm-10">
                        <input type="text" name="category" class="form-control" data-bind="value: $data.category" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-primary" data-bind="value: 'Update', click: $data.update" />
                </div>
                <div id="divMessage"></div> 
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var viewModel = new StudentViewModel();
        viewModel.Load("@id");
    });
</script>

